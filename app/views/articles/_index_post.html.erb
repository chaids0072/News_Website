<div class="panel panel-default">
  <div class="panel-body">
  	<h2><%= article.title %> </h2>
    <h2><small>Date : <%= article.created_at.strftime("%Y %m %d")%></small></h2>
  	<% unless article.tag_list.empty? %>
  		<p>Tagged: <%= article.tag_list.join(',') %></p>
  	<% end %>
  	<div class="btn-group pull-right" role="group">
	  	<%= link_to 'Show', article, class: "btn btn-default" %>
	</div>
  </div>
  <% if article.provider %>
	<div class="panel-footer">By <%=article.provider.source_name %></div>
  <% end %>
</div>

